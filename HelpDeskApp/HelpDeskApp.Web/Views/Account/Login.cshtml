@model HelpDeskApp.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<section id="loginForm">

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        

        <div class="page-form">
            <div class="panel panel-blue">
                <div class="panel-body pan">
                    <form action="#" class="form-horizontal">
                        <div class="form-body pal">
                            <div class="col-md-12 text-center">
                                <h1 style="margin-top: -90px; font-size: 48px;">HelpDesk App</h1>
                                <br />
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">

                                    <img src="@Url.Content("~/Template/images/profile-pic.png")" class="img-responsive" style="margin-top: -35px;" />
                                </div>
                                <div class="col-md-9 text-center">
                                    <h1>Hold on, please.</h1>
                                    <br />
                                    <p>
                                        @Html.ValidationSummary(true)
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-md-3 control-label">
                                    Username:</label>
                                <div class="col-md-9">
                                    <div class="input-icon right">
                                        <i class="fa fa-user"></i>
                                        @*<input id="UserName" type="text" name="UserName" placeholder="" class="form-control" />*@
                                        @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="col-md-3 control-label">
                                    Password:</label>
                                <div class="col-md-9">
                                    <div class="input-icon right">
                                        <i class="fa fa-lock"></i>
                                        @*<input id="Password" name ="Password"  type="text" placeholder="" class="form-control" />*@


                                        @*@Html.LabelFor(m => m.Password)*@
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                        <br />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mbn">
                                <div class="col-lg-12" align="right">
                                    <div class="form-group mbn">
                                        <div class="col-lg-3">
                                            &nbsp;
                                        </div>
                                        <div class="col-lg-9">
                                            <a href="#" class="btn btn-default">Go back</a>&nbsp;&nbsp;
                                    <button type="submit" class="btn btn-default">
                                        Sign In</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-12 text-center">
                <p style="font-weight:bold; font-size:16px">
                   <i class="fa  fa-eye bigger-110"></i> @Html.ActionLink("Log in Anonimous Mode","IndexAnonimous","Home")
                </p>
                

            </div>
        </div>
        
@*<p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>*@
    }
</section>

