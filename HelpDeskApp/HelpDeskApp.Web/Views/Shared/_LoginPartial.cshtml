@if (Request.IsAuthenticated)
{
    var userName = Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" }).ToHtmlString();
    
    <li class="dropdown">
        <a href="#"  class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span id="user">@User.Identity.Name</span> <b class="caret"></b>

        </a>

        <ul class="dropdown-menu">
            <li>
                <a href="#"><i class="fa fa-fw fa-user"></i>Profile</a>
            </li>
            <li>
                <a href="#"><i class="fa fa-fw fa-gear"></i>Settings</a>
            </li>
            <li class="divider"></li>

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <li>
                    <a href="#"><i class="fa fa-fw fa-power-off"></i>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </a>

                </li>   
                        
            }

        </ul>
    </li>
}
else
{
    <li class="dropdown">
        <a href="#" id="user" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span id="userA"> Anónimo</span>  <b class="caret"></b>

        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Register","Account")" id ="registerLink"><i class="fa fa-fw fa-user"></i>Register</a>
            </li>
            <li>
                <a href="@Url.Action("Login","Account")" id="loginLink"><i class="fa fa-fw fa-sign-in"></i> Login</a>
            </li>
            <li class="divider"></li>

        </ul>
    </li>
